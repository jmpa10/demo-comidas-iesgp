# Copia este archivo como .env.dockerhub y rellena lo mínimo.
# Arranque: docker compose -f docker-compose.image.yml --env-file .env.dockerhub up -d

POSTGRES_DB=reservas
POSTGRES_USER=reservas
POSTGRES_PASSWORD=reservas

# Conexión interna desde el contenedor app al servicio db
DATABASE_URL=postgresql://reservas:reservas@db:5432/reservas?schema=public

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=cambia-esto-por-un-secreto-largo

# Google OAuth (opcional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Firebase (opcional)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# n8n (opcional)
# Si n8n está en tu máquina o en Docker exponiendo 5678 al host (macOS/Windows):
#   http://host.docker.internal:5678/webhook/<id>
# En modo test (solo mientras el nodo Webhook está escuchando):
#   http://host.docker.internal:5678/webhook-test/<id>
N8N_WEBHOOK_URL=
# (Opcional) Secreto compartido para firmar/verificar el payload (HMAC SHA-256)
N8N_WEBHOOK_SECRET=

# Seed de demo al arrancar (recomendado para participantes)
# Nota: el seed es idempotente (no duplica menús si ya existen).
PRISMA_SEED=true
